    <option value="">-</option> 
   <option value="Virtual">Virtual</option> 
   <option value="Presencial">Presencial</option> 
</select>
  </div>
    <div class="form-group">
    <label for="intensidad">Intensidad Horaria:</label>
    <input type="number" class="form-control" name="intensidad" placeholder="Ingrese la intensidad horaria del curso">
  </div>
    <!---<div class="form-group">
    <label for="estado">Estado:</label>
    <input type="text" class="form-control" name="estado" placeholder="Ingrese el estado del curso">
  </div>--->

  <center><button type="submit" class="btn btn-default">Guardar</button></center>

</form>
</div>	
